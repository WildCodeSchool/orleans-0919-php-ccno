{% extends 'layoutAdmin.html.twig' %}
{% block content %}
    <div class="container-fluid pl-2 mt-5">
        <h1>Modification de l'évènement {{ event.title }}</h1>
        {% include 'Admin/_form.html.twig' %}
        {#Form delete#}
        <div class="row p-5">
            <form class="pl-3" method="post" action="/admin/delete/{{ event.id }}">
                <input type="submit" name="delete" value="Supprimer" class="btn btn-danger" onclick="return confirm
                    ('Attention vous allez aussi supprimer toutes les représentations de cet évènement ');">
            </form>
            <a href="/Admin/index" class="pl-3">
                <button type="button" class="btn btn-success">Retour</button>
            </a>
        </div>
    </div>
{% endblock %}
