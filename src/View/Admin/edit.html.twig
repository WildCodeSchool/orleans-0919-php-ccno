{% extends 'layoutAdmin.html.twig' %}
{% block content %}
    <div class="container-fluid m-5">
        <h1>Modification de l'évènement {{ event.title }}</h1>
        {% include 'Admin/_form.html.twig' %}
        {#Form delete#}
        <form method="post" action="/admin/delete/{{ event.id }}">
            <input type="submit" name="delete" value="Supprimer" class="btn btn-danger" onclick="return confirm
                    ('Attention vous allez aussi supprimer toutes les représentations de cette évènement ');">
        </form>
        <a href="/Admin/index">Retour</a>
    </div>
{% endblock %}
