<section class=“m-lg-5 m-4” id=“events”>
    <h2>ÉVÈNEMENTS</h2>
    <div class="events_container d-flex flex-wrap justify-content-around">
        {% for event in events %}
        <div class="event m-3 position-relative cover_image" style="background-image: url('{{ event.image }}')">
            <!--<a href="#events"><img class="w-100 h-100" src=""></a>-->
            <a href="#events"><p class="type position-absolute fixed-top mt-4 p-1">{{ event.name }}</p></a>
            <a href="#events">
                <div class="event-title position-absolute fixed-bottom pl-2 pt-2">
                    <h5 class="datetime">{{ event.datetime }}</h5>
                    <h3 class="title">{{ event.title }}</h3>
                </div>
            </a>
        </div>
        {% endfor %}
    </div>
</section>
